<!DOCTYPE html>
<html lang="en">
<%- include ("./partials/head.ejs", {title:"agregar-Productos", style:"editar-productos"}) %>

  <body>
    <main>
      <%- include ("./partials/navbar.ejs") %>
        <div class="titulo-form">
          <h1>Editando un Producto</h1>
          <form action="/products/edit/<%= cafe.id %>?_method=put" method="post">
           <% if(locals.errors) { %> 
            <ul>
            <% errors.forEach(function(error){ %> 
                  <li><%= error.msg %> </li>
              <% }) %> 
           </ul>
           <% } %> 
            <div class="campos">
              <label for="name">Nombre del producto</label>
              <input type="text" value="<%= cafe.name %>" name="name" />
            </div>

            <div class="campos">
              <label for="price">Precio</label>
              <input type="text" value="<%= cafe.price %>" name="price" />
            </div>

            <div class="campos">
              <label for="description">Descripcion</label>
              <input type="text" value="<%= cafe.description %>" name="description" />
            </div>

            <div class="campos">
              <label for="image">Agregar Imagen</label>
              <input type="file" name="image" />
            </div>

            <button type="submit">Editar</button>

          </form>
          <form action="/products/delete/<%= cafe.id %>?_method=delete" method="post">
            <button type="submit">Borrar</button>
          </form>
        </div>
    </main>
  </body>

  <%- include ("./partials/footer.ejs") %>

</html>