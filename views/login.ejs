<!DOCTYPE html>
<html>

<%- include ("./partials/head.ejs", {title:"login", style:"login"}) %>


    <body>
        <header>
            <%- include ("./partials/navbar.ejs")%>
        </header>
        <main>
            <div class="registro">
                <form action="/user/login" method="post">
                    <div>
                        <label for="E-mail"></label>
                        <input type="email" name="email" placeholder="E-mail">
                        <% if(locals.elError && locals.elError.email) {%>
                            <p class="errorMsg">
                                <%= elError.email.msg %>
                            </p>
                            <% } %>
                    </div>
                    <div>
                        <label for="Contraseña"></label>
                        <input type="password" name="contraseña" placeholder="Contraseña">
                        <% if(locals.elError && locals.elError.contraseña) {%>
                            <p class="errorMsg">
                                <%= elError.contraseña.msg %>
                            </p>
                            <% } %>
                    </div>
                    <div>
                        <input type="checkbox" name="recordarme" class="recordarme">
                        <label for="recordarme">Recordarme</label>
                    </div>
                    <% if(locals.errorLogin){ %> 
                        <p> <%= errorLogin %> </p>
                    <% } %> 
                   
                    <div class="botones">
                        <a href="/home.ejs"><button type="submit">Iniciar sesión</button></a>
                    </div>
                    <p class="link-registro">
                        No tienes cuenta? Registrate
                        <a href="/crearCuenta">aqui</a>
                    </p>
               
                </form>
            </div>
        </main>
        <%- include ("./partials/footer.ejs") %>
    </body>

</html>